                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get('_route') == 'app_house_view' ? 'active' }}" href="{{ path('app_house_view') }}">Maisons disponibles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get('_route') == 'app_house_new' ? 'active' }}" href="{{ path('app_house_new') }}">Proposer un hébergement</a>
                            </li>
                            <li class="nav-item dropdown ms-auto">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Profil
                                </a>
                                {% if app.user %}
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="{{ path('app_profile_infos') }}">Mes Infos</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_profile_house')}}">Mes Maisons</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_profile_booking')}}">Mes Reservations</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_profile_discussions')}}">Mes Fils de Discussion</a></li>
