<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="{{ asset('css/navbar.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% block header %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('app_index') }}">RefugiHome</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 w-100">
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get('_route') == 'app_index' ? 'active' }}" aria-current="page" href="{{ path('app_index') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get('_route') == 'app_house_view' ? 'active' }}" href="{{ path('app_house_view') }}">Maison à pourvoir</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get('_route') == 'app_house_new' ? 'active' }}" href="{{ path('app_house_new') }}">Proposer un hébergement</a>
                            </li>
                            <li class="nav-item dropdown ms-auto">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Profil
                                </a>
                                {% if app.user %}
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="{{ path('app_profile_infos') }}">Mes Infos</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_profile_house')}}">Mes Maisons</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_profile_booking')}}">Mes Reservations</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_profile_discussions')}}">Mes Fils de Discussion</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Deconnexion</a></li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item focus-red-bckgrnd" href="{{ path('easyadmin') }}" target="_blank"><span class="red-text">Admin</span></a></li>
                                    {% endif %}
                                </ul>
                                {% else %}
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="{{ path('app_login') }}">Se Connecter</a></li>
                                </ul>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
    </head>
    <body>
        {% block body %}
        {% endblock %}
    </body>
</html>
