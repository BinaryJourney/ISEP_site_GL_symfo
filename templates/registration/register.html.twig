{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="mx-auto mt-4 w-50 d-flex flex-column bg-white" style="border-radius: 0.5rem">
        <h1 class="mt-4 mx-auto">S'enregistrer</h1>

        <div class="mx-auto p-5" style="width: 80%">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.name, {
                label: 'Nom'
            }) }}
            {{ form_row(registrationForm.surname, {
                label: 'Prénom'
            }) }}
            {{ form_row(registrationForm.birthdate, {
                label: 'Date de naissance'
            }) }}
            {{ form_row(registrationForm.phoneNumber, {
                label: 'Numero de téléphone'
            }) }}
            {{ form_row(registrationForm.key_type_sex, {
                label: 'Sexe'
            }) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: "J'ai lu et j'accepte les conditions d'utilisation et la politique de vie privée"
            }) }}

            {{ form_end(registrationForm) }}

            <p class="mx-auto" style="color: #878787; font-size: 0.75rem; width: fit-content">J'ai déjà un compte. <a href="{{ path('app_login') }}">Se connecter</a></p>
        </div>
    </div>

{% endblock %}
