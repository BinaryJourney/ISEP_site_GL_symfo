{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="w-100 h-100 d-flex flex-column bg-white">
        <h1 class="ms-3">Register</h1>

        <div class="m-auto p-5 w-75">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.name) }}
            {{ form_row(registrationForm.surname) }}
            {{ form_row(registrationForm.birthdate) }}
            {{ form_row(registrationForm.phoneNumber) }}
            {{ form_row(registrationForm.key_type_sex) }}
            {{ form_row(registrationForm.agreeTerms) }}

            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
