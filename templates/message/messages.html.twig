{% extends "base.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('/js/automatic_timezone_calculator.js') }}"></script>
{% endblock %}

{% block body %}

    <div class="w-100 h-100 d-flex flex-column">

        <h3 class="mx-auto my-3">Fil de discussion avec {{ other_user.name ~ ' ' ~ other_user.surname }}</h3>

        {% for message in messages %}
            <div class="container m-auto w-75 p-3">
                <div>{{ message.content }}</div>
                <div>{{ message.keySender.name ~ ' ' ~ message.keySender.surname }}</div>
                <div class="message-timestamp">{{ message.timestamp|date("d/m/Y H:i") }}</div>
            </div>
        {% endfor %}

        {{ form_start(form) }}
        {{ form_end(form) }}

    </div>

{% endblock %}